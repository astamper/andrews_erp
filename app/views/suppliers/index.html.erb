<%- model_class = Supplier -%>
<div class="page-header">
  <h1><%=t '.title', :default => Supplier %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.company_name %></td>
        <td><%=l supplier.created_at, format: :long %></td>
        <td>
          <%= link_to 'Show', supplier %>
          <%= link_to 'Edit', edit_supplier_path(supplier) %>
          <%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_supplier_path,
            :class => 'btn btn-primary' %>
