<%- model_class = StockType -%>
<div class="page-header">
  <h1><%=t '.title', :default => StockType %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @stock_type.identification %></pre></dd>
  </dl>
    <dl>
  <dt class="label label-default"><%= model_class.human_attribute_name(:unit) %></dt>
      <dd><pre class="prettyprint"><%= @stock_type.unit %></pre></dd>
  </dl>
  <dt class="label label-default"><%= model_class.human_attribute_name(:category) %></dt>
      <dd><pre class="prettyprint"><%= @stock_type.category %></pre></dd>
  </dl>
  <dt class="label label-default"><%= model_class.human_attribute_name(:base) %></dt>
      <dd><pre class="prettyprint"><%= @stock_type.base %></pre></dd>
  </dl>
  <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @stock_type.price %></pre></dd>
  </dl>
</div>

  <dt class="label label-default">Ingredients</dt>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Unit</th>
    </tr>
  </thead>
  <tbody>
    <% @stock_type.ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.quantity %></td>
        <td><%= ingredient.stock_type_component.identification %></td>
        <td><%= ingredient.stock_type_component.unit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stock_types_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_type_path(@stock_type), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_type_path(@stock_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
