<%= simple_form_for(@stock_type) do |f| %>
  <%= f.error_notification %>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Stock Type</h3>
      </div>
      <div class="panel-body">
        <div class="form-inputs">
          <%= f.input :base%>
          <div class="col-sm-6">
            <%= f.input :name, input_html: { id: "name_location"}%>
          </div>
          <div class="col-sm-6">
            <%= f.association :base_stock_type, collection: StockType.where(base: true), label_method: :label %>
          </div>
          <div class="col-sm-12">
            <%= f.input :unit%>
            <%= f.input :category, collection: ([ "Raw Ingredient", "Sub-Assembly", "Packaging","Product"])%>
            <%= f.input :price%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Ingredients</h3>
      </div>
      <div class="panel-body">
        <div class="form-inputs">
          <div id='ingredients'>
            <%= f.simple_fields_for :ingredients do |ingredient| %>
              <%= render 'ingredient_fields', :f => ingredient %>
            <% end %>
            <div class='links'>
              <%= link_to_add_association 'Add ingredient', f, :ingredients, class: "btn btn-default add-button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>




